generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id           String   @id @default(uuid())
  nickname     String   @unique
  xp           Int      @default(0)
  level        Int      @default(1)
  bestScore    Int      @default(0)
  achievements Json     @default("[]")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
